<UserControl x:Class="Excel_Generator.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Excel_Generator.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFD7D7D7">
        <TextBlock x:Name="settingsLangSelectionLabel" HorizontalAlignment="Left" Margin="10,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="130" FontSize="24"><Run Language="de-de" Text="Language"/><LineBreak/><Run Language="de-de"/><LineBreak/><Run/></TextBlock>
        <ComboBox x:Name="langBox" HorizontalAlignment="Left" Margin="140,94,0,0" VerticalAlignment="Top" Width="170" SelectionChanged="ComboBox_SelectionChanged" Height="38" FontSize="24"/>
        <TextBlock x:Name="settingsTitleLabel" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Settings" VerticalAlignment="Top" Height="75" Width="284" FontWeight="Bold" FontSize="40" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,424,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-de" Text="© Marcel Zietek 2022"/></TextBlock>

    </Grid>
</UserControl>
